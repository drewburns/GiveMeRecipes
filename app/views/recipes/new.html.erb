<% provide(:title , "New Recipe") %>
<h1> New Recipe </h1>

<%= form_for(@recipe) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :ingredients %>
	<%= f.text_area :ingredients %>

	<%= f.label :instructions %>
	<%= f.text_area :instructions %>

	<%= f.submit "Create recipe" %>
<% end %>